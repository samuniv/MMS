{
  "ConnectionStrings": {
    "DefaultConnection": "Host=postgres;Database=meetingmanagement;Username=postgres;Password=postgres;SSL Mode=Prefer;Trust Server Certificate=true"
  },
  "MeetingSettings": {
    "DefaultMeetingDurationMinutes": 60,
    "ReminderHours": 24,
    "MaxParticipants": 50,
    "MaxDocumentSizeMB": 10,
    "AllowedFileTypes": [
      ".pdf",
      ".doc",
      ".docx",
      ".xls",
      ".xlsx"
    ]
  },
  "DocumentSettings": {
    "MaxDocumentSizeMB": 10,
    "AllowedFileTypes": [
      ".pdf",
      ".doc",
      ".docx",
      ".xls",
      ".xlsx"
    ],
    "UploadPath": "/app/uploads"
  },
  "EmailSettings": {
    "SmtpServer": "smtp.gmail.com",
    "SmtpPort": 587,
    "EnableSsl": true,
    "FromAddress": "meetings@gov.np",
    "FromName": "Meeting Management System",
    "Username": "",
    "Password": "",
    "MaxRetryAttempts": 3,
    "RetryDelaySeconds": 5
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss} {Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "/app/logs/meetingmanagement-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30,
          "fileSizeLimitBytes": 10485760,
          "rollOnFileSizeLimit": true,
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}] {SourceContext} {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "HealthChecks": {
    "Enabled": true,
    "DatabaseCheckEnabled": true,
    "EmailCheckEnabled": true,
    "DiskSpaceCheckEnabled": true,
    "MinimumFreeDiskSpaceGB": 5
  }
}
