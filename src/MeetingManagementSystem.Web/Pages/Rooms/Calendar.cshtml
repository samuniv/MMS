@page
@model MeetingManagementSystem.Web.Pages.Rooms.CalendarModel
@{
    ViewData["Title"] = "Room Calendar";
}

<div class="mb-6">
    <h1 class="text-3xl font-bold">Room Availability Calendar</h1>
    <p class="text-base-content/70">Check room availability and bookings</p>
</div>

<!-- Filters -->
<div class="card bg-base-100 shadow mb-6">
    <div class="card-body">
        <form method="get" class="grid grid-cols-1 md:grid-cols-4 gap-4">
            <div class="form-control">
                <label class="label">
                    <span class="label-text">Room</span>
                </label>
                <select name="roomId" class="select select-bordered" onchange="this.form.submit()">
                    <option value="">All Rooms</option>
                    @foreach (var room in Model.AllRooms)
                    {
                        <option value="@room.Id" selected="@(Model.SelectedRoomId == room.Id)">@room.Name</option>
                    }
                </select>
            </div>
            
            <div class="form-control">
                <label class="label">
                    <span class="label-text">Date</span>
                </label>
                <input type="date" name="date" value="@Model.SelectedDate.ToString("yyyy-MM-dd")" class="input input-bordered" onchange="this.form.submit()" />
            </div>
            
            <div class="form-control md:col-span-2 flex flex-row gap-2 items-end">
                <a asp-page="Calendar" asp-route-date="@DateTime.Today.AddDays(-1).ToString("yyyy-MM-dd")" asp-route-roomId="@Model.SelectedRoomId" class="btn btn-ghost">
                    <i class="fas fa-chevron-left"></i>
                    Previous Day
                </a>
                <a asp-page="Calendar" asp-route-date="@DateTime.Today.ToString("yyyy-MM-dd")" asp-route-roomId="@Model.SelectedRoomId" class="btn btn-primary">
                    Today
                </a>
                <a asp-page="Calendar" asp-route-date="@DateTime.Today.AddDays(1).ToString("yyyy-MM-dd")" asp-route-roomId="@Model.SelectedRoomId" class="btn btn-ghost">
                    Next Day
                    <i class="fas fa-chevron-right"></i>
                </a>
            </div>
        </form>
    </div>
</div>

<!-- Calendar View -->
<div class="card bg-base-100 shadow">
    <div class="card-body">
        <h2 class="card-title mb-4">
            <i class="fas fa-calendar-alt"></i>
            @Model.SelectedDate.ToString("dddd, MMMM dd, yyyy")
        </h2>
        
        @if (Model.SelectedRoomId.HasValue)
        {
            var room = Model.AllRooms.FirstOrDefault(r => r.Id == Model.SelectedRoomId.Value);
            if (room != null)
            {
                <div class="alert alert-info mb-4">
                    <i class="fas fa-door-open"></i>
                    <span>Showing bookings for <strong>@room.Name</strong> - @room.Location</span>
                </div>
            }
        }
        
        @if (Model.Bookings.Any())
        {
            <div class="space-y-3">
                @foreach (var booking in Model.Bookings.OrderBy(b => b.StartTime))
                {
                    <div class="border border-base-300 rounded-lg p-4 hover:bg-base-200 transition-colors">
                        <div class="flex justify-between items-start">
                            <div class="flex-1">
                                <h4 class="font-semibold text-lg">@booking.Title</h4>
                                <p class="text-sm text-base-content/70 mt-1">@booking.Description</p>
                                
                                <div class="flex flex-wrap gap-4 mt-3 text-sm">
                                    <div class="flex items-center gap-2">
                                        <i class="fas fa-clock text-primary"></i>
                                        <span>@booking.StartTime.ToString(@"hh\:mm") - @booking.EndTime.ToString(@"hh\:mm")</span>
                                    </div>
                                    
                                    @if (!Model.SelectedRoomId.HasValue && booking.MeetingRoom != null)
                                    {
                                        <div class="flex items-center gap-2">
                                            <i class="fas fa-door-open text-primary"></i>
                                            <span>@booking.MeetingRoom.Name</span>
                                        </div>
                                    }
                                    
                                    <div class="flex items-center gap-2">
                                        <i class="fas fa-user text-primary"></i>
                                        <span>@booking.Organizer.FirstName @booking.Organizer.LastName</span>
                                    </div>
                                    
                                    <div class="flex items-center gap-2">
                                        <i class="fas fa-users text-primary"></i>
                                        <span>@booking.Participants.Count participants</span>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="flex flex-col items-end gap-2">
                                <div class="badge @GetStatusBadgeClass(booking.Status)">
                                    @booking.Status
                                </div>
                                <a asp-page="/Meetings/Details" asp-route-id="@booking.Id" class="btn btn-sm btn-ghost">
                                    <i class="fas fa-eye"></i>
                                    View
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="text-center py-12 text-base-content/60">
                <i class="fas fa-calendar-check text-4xl mb-4"></i>
                <p class="text-lg">No bookings for this date</p>
                @if (User.IsInRole("Administrator") || User.IsInRole("Government Official"))
                {
                    <a asp-page="/Meetings/Create" class="btn btn-primary mt-4">
                        <i class="fas fa-plus"></i>
                        Schedule Meeting
                    </a>
                }
            </div>
        }
    </div>
</div>

@functions {
    private string GetStatusBadgeClass(MeetingStatus status)
    {
        return status switch
        {
            MeetingStatus.Scheduled => "badge-info",
            MeetingStatus.InProgress => "badge-warning",
            MeetingStatus.Completed => "badge-success",
            MeetingStatus.Cancelled => "badge-error",
            _ => "badge-ghost"
        };
    }
}
