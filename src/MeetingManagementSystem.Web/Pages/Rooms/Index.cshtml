@page
@model MeetingManagementSystem.Web.Pages.Rooms.IndexModel
@{
    ViewData["Title"] = "Meeting Rooms";
}

<div class="flex justify-between items-center mb-6">
    <div>
        <h1 class="text-3xl font-bold">Meeting Rooms</h1>
        <p class="text-base-content/70">View available meeting rooms</p>
    </div>
    @if (User.IsInRole("Administrator"))
    {
        <a asp-page="Manage" class="btn btn-primary">
            <i class="fas fa-cog"></i>
            Manage Rooms
        </a>
    }
</div>

<!-- Room Grid -->
@if (Model.Rooms.Any())
{
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        @foreach (var room in Model.Rooms)
        {
            <div class="card bg-base-100 shadow hover:shadow-lg transition-shadow">
                <div class="card-body">
                    <h3 class="card-title">
                        <i class="fas fa-door-open text-primary"></i>
                        @room.Name
                    </h3>
                    
                    <div class="space-y-2 mt-4">
                        <div class="flex items-center gap-2 text-sm">
                            <i class="fas fa-map-marker-alt text-base-content/70"></i>
                            <span>@room.Location</span>
                        </div>
                        
                        <div class="flex items-center gap-2 text-sm">
                            <i class="fas fa-users text-base-content/70"></i>
                            <span>Capacity: @room.Capacity people</span>
                        </div>
                        
                        @if (!string.IsNullOrWhiteSpace(room.Equipment))
                        {
                            <div class="flex items-start gap-2 text-sm">
                                <i class="fas fa-laptop text-base-content/70 mt-1"></i>
                                <span>@room.Equipment</span>
                            </div>
                        }
                    </div>
                    
                    <div class="card-actions justify-end mt-4">
                        <a asp-page="Calendar" asp-route-roomId="@room.Id" class="btn btn-sm btn-primary">
                            <i class="fas fa-calendar"></i>
                            View Calendar
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="card bg-base-100 shadow">
        <div class="card-body">
            <div class="text-center py-12">
                <div class="text-6xl text-base-content/30 mb-4">
                    <i class="fas fa-door-closed"></i>
                </div>
                <h3 class="text-xl font-semibold mb-2">No rooms available</h3>
                <p class="text-base-content/70">There are no meeting rooms configured.</p>
            </div>
        </div>
    </div>
}
