@page
@model MeetingManagementSystem.Web.Pages.Admin.Users.IndexModel
@{
    ViewData["Title"] = "User Management";
}

<div class="mb-6">
    <h1 class="text-3xl font-bold">User Management</h1>
    <p class="text-base-content/70">Manage user accounts and roles</p>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success mb-4">
        <i class="fas fa-check-circle"></i>
        <span>@TempData["SuccessMessage"]</span>
    </div>
}

<div class="card bg-base-100 shadow-xl">
    <div class="card-body">
        <div class="overflow-x-auto">
            <table class="table table-zebra">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Department</th>
                        <th>Position</th>
                        <th>Roles</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model.Users)
                    {
                        <tr>
                            <td>@user.FirstName @user.LastName</td>
                            <td>@user.Email</td>
                            <td>@user.Department</td>
                            <td>@user.Position</td>
                            <td>
                                @foreach (var role in Model.UserRoles[user.Id])
                                {
                                    <span class="badge badge-primary badge-sm mr-1">@role</span>
                                }
                            </td>
                            <td>
                                @if (user.IsActive)
                                {
                                    <span class="badge badge-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge badge-error">Inactive</span>
                                }
                            </td>
                            <td>
                                <div class="flex gap-2">
                                    <a asp-page="./ManageRoles" asp-route-id="@user.Id" class="btn btn-sm btn-primary">
                                        <i class="fas fa-user-shield"></i> Roles
                                    </a>
                                    <form method="post" asp-page-handler="ToggleStatus" asp-route-id="@user.Id" class="inline">
                                        @if (user.IsActive)
                                        {
                                            <button type="submit" class="btn btn-sm btn-warning">
                                                <i class="fas fa-ban"></i> Deactivate
                                            </button>
                                        }
                                        else
                                        {
                                            <button type="submit" class="btn btn-sm btn-success">
                                                <i class="fas fa-check"></i> Activate
                                            </button>
                                        }
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
