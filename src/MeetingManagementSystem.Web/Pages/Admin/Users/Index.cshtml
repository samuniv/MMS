@page
@model MeetingManagementSystem.Web.Pages.Admin.Users.IndexModel
@{
    ViewData["Title"] = "User Management";
}

<div class="flex justify-between items-center mb-6">
    <div>
        <h1 class="text-3xl font-bold">User Management</h1>
        <p class="text-base-content/70">Manage user accounts and roles</p>
    </div>
    <a asp-page="/Account/Register" class="btn btn-primary">
        <i class="fas fa-user-plus"></i>
        Add User
    </a>
</div>

<!-- Search and Filter -->
<div class="card bg-base-100 shadow mb-6">
    <div class="card-body">
        <form method="get" class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <div class="form-control">
                <input type="text" name="search" value="@Model.SearchTerm" placeholder="Search users..." class="input input-bordered" />
            </div>
            <div class="form-control">
                <select name="status" class="select select-bordered">
                    <option value="">All Status</option>
                    <option value="active" selected="@(Model.StatusFilter == "active")">Active</option>
                    <option value="inactive" selected="@(Model.StatusFilter == "inactive")">Inactive</option>
                </select>
            </div>
            <div class="form-control flex flex-row gap-2">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-search"></i>
                    Search
                </button>
                <a asp-page="Index" class="btn btn-ghost">Reset</a>
            </div>
        </form>
    </div>
</div>

<div class="card bg-base-100 shadow-xl">
    <div class="card-body">
        <div class="overflow-x-auto">
            <table class="table table-zebra">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Department</th>
                        <th>Position</th>
                        <th>Roles</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model.Users)
                    {
                        <tr>
                            <td>@user.FirstName @user.LastName</td>
                            <td>@user.Email</td>
                            <td>@user.Department</td>
                            <td>@user.Position</td>
                            <td>
                                @foreach (var role in Model.UserRoles[user.Id])
                                {
                                    <span class="badge badge-primary badge-sm mr-1">@role</span>
                                }
                            </td>
                            <td>
                                @if (user.IsActive)
                                {
                                    <span class="badge badge-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge badge-error">Inactive</span>
                                }
                            </td>
                            <td>
                                <div class="flex gap-2">
                                    <a asp-page="./ManageRoles" asp-route-id="@user.Id" class="btn btn-sm btn-primary">
                                        <i class="fas fa-user-shield"></i> Roles
                                    </a>
                                    <form method="post" asp-page-handler="ToggleStatus" asp-route-id="@user.Id" class="inline">
                                        @if (user.IsActive)
                                        {
                                            <button type="submit" class="btn btn-sm btn-warning">
                                                <i class="fas fa-ban"></i> Deactivate
                                            </button>
                                        }
                                        else
                                        {
                                            <button type="submit" class="btn btn-sm btn-success">
                                                <i class="fas fa-check"></i> Activate
                                            </button>
                                        }
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
