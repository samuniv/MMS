@page
@model MeetingManagementSystem.Web.Pages.Users.DirectoryModel
@{
    ViewData["Title"] = "User Directory";
}

<div class="mb-6">
    <h1 class="text-3xl font-bold">User Directory</h1>
    <p class="text-base-content/70">Browse all active users in the system</p>
</div>

<!-- Search -->
<div class="card bg-base-100 shadow mb-6">
    <div class="card-body">
        <form method="get" class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <div class="form-control md:col-span-2">
                <input type="text" name="search" value="@Model.SearchTerm" placeholder="Search by name, department, or position..." class="input input-bordered" />
            </div>
            <div class="form-control flex flex-row gap-2">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-search"></i>
                    Search
                </button>
                <a asp-page="Directory" class="btn btn-ghost">Reset</a>
            </div>
        </form>
    </div>
</div>

<!-- User Grid -->
@if (Model.Users.Any())
{
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        @foreach (var user in Model.Users)
        {
            <div class="card bg-base-100 shadow hover:shadow-lg transition-shadow">
                <div class="card-body">
                    <div class="flex items-start gap-4">
                        <div class="avatar placeholder">
                            <div class="bg-primary text-primary-content rounded-full w-16">
                                <span class="text-2xl">@user.FirstName.Substring(0, 1)@user.LastName.Substring(0, 1)</span>
                            </div>
                        </div>
                        <div class="flex-1">
                            <h3 class="card-title text-lg">@user.FirstName @user.LastName</h3>
                            <p class="text-sm text-base-content/70">@user.Position</p>
                            <p class="text-sm text-base-content/70">@user.Department</p>
                            
                            <div class="mt-3 space-y-1">
                                <div class="flex items-center gap-2 text-sm">
                                    <i class="fas fa-envelope text-primary"></i>
                                    <a href="mailto:@user.Email" class="link link-hover">@user.Email</a>
                                </div>
                                @if (!string.IsNullOrWhiteSpace(user.OfficeLocation))
                                {
                                    <div class="flex items-center gap-2 text-sm">
                                        <i class="fas fa-map-marker-alt text-primary"></i>
                                        <span>@user.OfficeLocation</span>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="card bg-base-100 shadow">
        <div class="card-body">
            <div class="text-center py-12">
                <div class="text-6xl text-base-content/30 mb-4">
                    <i class="fas fa-users"></i>
                </div>
                <h3 class="text-xl font-semibold mb-2">No users found</h3>
                <p class="text-base-content/70">Try adjusting your search criteria.</p>
            </div>
        </div>
    </div>
}
