@page
@model MeetingManagementSystem.Web.Pages.Reports.IndexModel
@{
    ViewData["Title"] = "Reports & Analytics";
}

<div class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold mb-6">Reports & Analytics</h1>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4 mb-8">
        <a href="/Reports/Attendance" class="card bg-primary text-primary-content hover:shadow-lg transition">
            <div class="card-body">
                <h2 class="card-title">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                    </svg>
                    Attendance
                </h2>
                <p>Meeting attendance tracking and analysis</p>
            </div>
        </a>

        <a href="/Reports/RoomUtilization" class="card bg-secondary text-secondary-content hover:shadow-lg transition">
            <div class="card-body">
                <h2 class="card-title">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                    </svg>
                    Room Utilization
                </h2>
                <p>Meeting room usage and efficiency</p>
            </div>
        </a>

        <a href="/Reports/Statistics" class="card bg-accent text-accent-content hover:shadow-lg transition">
            <div class="card-body">
                <h2 class="card-title">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                    </svg>
                    Statistics
                </h2>
                <p>Overall meeting statistics and trends</p>
            </div>
        </a>

        <a href="/Reports/UserActivity" class="card bg-info text-info-content hover:shadow-lg transition">
            <div class="card-body">
                <h2 class="card-title">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                    </svg>
                    User Activity
                </h2>
                <p>User participation and engagement</p>
            </div>
        </a>
    </div>

    <div class="card bg-base-100 shadow-xl">
        <div class="card-body">
            <h2 class="card-title">Quick Statistics</h2>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mt-4">
                <div class="stat bg-base-200 rounded-lg">
                    <div class="stat-title">Total Meetings (This Month)</div>
                    <div class="stat-value text-primary">@Model.TotalMeetingsThisMonth</div>
                </div>
                <div class="stat bg-base-200 rounded-lg">
                    <div class="stat-title">Average Attendance Rate</div>
                    <div class="stat-value text-secondary">@Model.AverageAttendanceRate.ToString("F1")%</div>
                </div>
                <div class="stat bg-base-200 rounded-lg">
                    <div class="stat-title">Room Utilization</div>
                    <div class="stat-value text-accent">@Model.AverageRoomUtilization.ToString("F1")%</div>
                </div>
            </div>
        </div>
    </div>
</div>
