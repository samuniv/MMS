@page
@model MeetingManagementSystem.Web.Pages.Reports.StatisticsModel
@{
    ViewData["Title"] = "Meeting Statistics";
}

<div class="container mx-auto px-4 py-8">
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-3xl font-bold">Meeting Statistics</h1>
        <a href="/Reports" class="btn btn-ghost">‚Üê Back to Reports</a>
    </div>

    <div class="card bg-base-100 shadow-xl mb-6">
        <div class="card-body">
            <h2 class="card-title">Filter Options</h2>
            <form method="get" class="grid grid-cols-1 md:grid-cols-4 gap-4">
                <div class="form-control">
                    <label class="label">
                        <span class="label-text">Start Date</span>
                    </label>
                    <input type="date" asp-for="StartDate" class="input input-bordered" />
                </div>
                <div class="form-control">
                    <label class="label">
                        <span class="label-text">End Date</span>
                    </label>
                    <input type="date" asp-for="EndDate" class="input input-bordered" />
                </div>
                <div class="form-control">
                    <label class="label">
                        <span class="label-text">Department (Optional)</span>
                    </label>
                    <input type="text" asp-for="Department" class="input input-bordered" placeholder="All Departments" />
                </div>
                <div class="form-control">
                    <label class="label">
                        <span class="label-text">&nbsp;</span>
                    </label>
                    <button type="submit" class="btn btn-primary">Generate Report</button>
                </div>
            </form>
        </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4 mb-6">
        <div class="stats shadow">
            <div class="stat">
                <div class="stat-figure text-primary">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                    </svg>
                </div>
                <div class="stat-title">Total Meetings</div>
                <div class="stat-value text-primary">@Model.Statistics.TotalMeetings</div>
            </div>
        </div>

        <div class="stats shadow">
            <div class="stat">
                <div class="stat-figure text-success">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                </div>
                <div class="stat-title">Completed</div>
                <div class="stat-value text-success">@Model.Statistics.CompletedMeetings</div>
            </div>
        </div>

        <div class="stats shadow">
            <div class="stat">
                <div class="stat-figure text-warning">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                </div>
                <div class="stat-title">Scheduled</div>
                <div class="stat-value text-warning">@Model.Statistics.ScheduledMeetings</div>
            </div>
        </div>

        <div class="stats shadow">
            <div class="stat">
                <div class="stat-figure text-error">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                </div>
                <div class="stat-title">Cancelled</div>
                <div class="stat-value text-error">@Model.Statistics.CancelledMeetings</div>
            </div>
        </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-6">
        <div class="card bg-base-100 shadow-xl">
            <div class="card-body">
                <h2 class="card-title">Key Metrics</h2>
                <div class="space-y-4">
                    <div class="flex justify-between items-center">
                        <span>Average Duration</span>
                        <span class="badge badge-lg badge-primary">@Model.Statistics.AverageDurationMinutes.ToString("F0") min</span>
                    </div>
                    <div class="flex justify-between items-center">
                        <span>Average Participants</span>
                        <span class="badge badge-lg badge-secondary">@Model.Statistics.AverageParticipants.ToString("F1")</span>
                    </div>
                    <div class="flex justify-between items-center">
                        <span>Completion Rate</span>
                        <div class="flex items-center gap-2">
                            <progress class="progress progress-success w-32" value="@Model.Statistics.CompletionRate" max="100"></progress>
                            <span class="badge badge-success">@Model.Statistics.CompletionRate.ToString("F1")%</span>
                        </div>
                    </div>
                    <div class="flex justify-between items-center">
                        <span>Total Participants</span>
                        <span class="badge badge-lg badge-accent">@Model.Statistics.TotalParticipants</span>
                    </div>
                    <div class="flex justify-between items-center">
                        <span>Total Documents</span>
                        <span class="badge badge-lg badge-info">@Model.Statistics.TotalDocuments</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="card bg-base-100 shadow-xl">
            <div class="card-body">
                <h2 class="card-title">Meetings by Status</h2>
                <div class="space-y-2">
                    @foreach (var status in Model.Statistics.MeetingsByStatus.OrderByDescending(s => s.Value))
                    {
                        var percentage = Model.Statistics.TotalMeetings > 0 
                            ? (double)status.Value / Model.Statistics.TotalMeetings * 100 
                            : 0;
                        <div>
                            <div class="flex justify-between text-sm mb-1">
                                <span>@status.Key</span>
                                <span>@status.Value (@percentage.ToString("F1")%)</span>
                            </div>
                            <progress class="progress progress-primary w-full" value="@percentage" max="100"></progress>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    @if (Model.Statistics.MeetingsByDepartment.Any())
    {
        <div class="card bg-base-100 shadow-xl">
            <div class="card-body">
                <div class="flex justify-between items-center mb-4">
                    <h2 class="card-title">Meetings by Department</h2>
                    <a href="?handler=ExportExcel&StartDate=@Model.StartDate.ToString("yyyy-MM-dd")&EndDate=@Model.EndDate.ToString("yyyy-MM-dd")&Department=@Model.Department" 
                       class="btn btn-sm btn-outline">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                        </svg>
                        Export CSV
                    </a>
                </div>
                <div class="overflow-x-auto">
                    <table class="table table-zebra w-full">
                        <thead>
                            <tr>
                                <th>Department</th>
                                <th>Meeting Count</th>
                                <th>Percentage</th>
                                <th>Distribution</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var dept in Model.Statistics.MeetingsByDepartment.OrderByDescending(d => d.Value))
                            {
                                var percentage = Model.Statistics.TotalMeetings > 0 
                                    ? (double)dept.Value / Model.Statistics.TotalMeetings * 100 
                                    : 0;
                                <tr>
                                    <td class="font-semibold">@dept.Key</td>
                                    <td>@dept.Value</td>
                                    <td>@percentage.ToString("F1")%</td>
                                    <td>
                                        <progress class="progress progress-primary w-full" value="@percentage" max="100"></progress>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>
