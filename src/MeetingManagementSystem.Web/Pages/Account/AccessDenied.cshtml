@page
@model MeetingManagementSystem.Web.Pages.Account.AccessDeniedModel
@{
    ViewData["Title"] = "Access Denied";
}

<div class="min-h-screen flex items-center justify-center bg-base-200">
    <div class="card w-full max-w-md bg-base-100 shadow-xl">
        <div class="card-body text-center">
            <div class="text-error text-6xl mb-4">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-24 w-24 mx-auto" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                </svg>
            </div>
            <h2 class="card-title text-2xl font-bold justify-center mb-4">Access Denied</h2>
            <p class="text-base-content/70 mb-6">
                You do not have permission to access this resource. 
                Please contact your administrator if you believe this is an error.
            </p>
            <div class="card-actions justify-center">
                <a href="/" class="btn btn-primary">Go to Home</a>
                <a asp-page="./Login" class="btn btn-outline">Login</a>
            </div>
        </div>
    </div>
</div>
