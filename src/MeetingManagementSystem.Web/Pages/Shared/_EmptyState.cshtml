@* Empty state component *@
@model EmptyStateModel

<div class="text-center py-12">
    <div class="text-6xl text-base-content/30 mb-4">
        <i class="@Model.Icon"></i>
    </div>
    <h3 class="text-xl font-semibold mb-2">@Model.Title</h3>
    <p class="text-base-content/70 mb-6">@Model.Message</p>
    @if (!string.IsNullOrEmpty(Model.ActionText) && !string.IsNullOrEmpty(Model.ActionUrl))
    {
        <a href="@Model.ActionUrl" class="btn btn-primary">
            <i class="fas fa-plus"></i>
            @Model.ActionText
        </a>
    }
</div>

@functions {
    public class EmptyStateModel
    {
        public string Icon { get; set; } = "fas fa-inbox";
        public string Title { get; set; } = "No items found";
        public string Message { get; set; } = "There are no items to display.";
        public string ActionText { get; set; }
        public string ActionUrl { get; set; }
    }
}
