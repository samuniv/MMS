@* Navigation menu with role-based visibility *@

<ul class="menu p-4 space-y-2">
    <!-- Dashboard -->
    <li>
        <a asp-page="/Index" class="flex items-center space-x-3">
            <i class="fas fa-home"></i>
            <span>Dashboard</span>
        </a>
    </li>
    
    @if (User.Identity?.IsAuthenticated == true)
    {
        <!-- Meetings -->
        <li>
            <details open>
                <summary class="flex items-center space-x-3">
                    <i class="fas fa-calendar-alt"></i>
                    <span>Meetings</span>
                </summary>
                <ul>
                    <li><a asp-page="/Meetings/Index">All Meetings</a></li>
                    <li><a asp-page="/Meetings/MyMeetings">My Meetings</a></li>
                    @if (User.IsInRole("Administrator") || User.IsInRole("Government Official"))
                    {
                        <li><a asp-page="/Meetings/Create">Schedule Meeting</a></li>
                    }
                </ul>
            </details>
        </li>
        
        <!-- Meeting Rooms -->
        <li>
            <details>
                <summary class="flex items-center space-x-3">
                    <i class="fas fa-door-open"></i>
                    <span>Meeting Rooms</span>
                </summary>
                <ul>
                    <li><a asp-page="/Rooms/Index">All Rooms</a></li>
                    <li><a asp-page="/Rooms/Calendar">Room Calendar</a></li>
                    @if (User.IsInRole("Administrator"))
                    {
                        <li><a asp-page="/Rooms/Manage">Manage Rooms</a></li>
                    }
                </ul>
            </details>
        </li>
        
        <!-- Documents -->
        <li>
            <a asp-page="/Documents/List" class="flex items-center space-x-3">
                <i class="fas fa-file-alt"></i>
                <span>Documents</span>
            </a>
        </li>
        
        <!-- Action Items -->
        <li>
            <a asp-page="/ActionItems/Index" class="flex items-center space-x-3">
                <i class="fas fa-tasks"></i>
                <span>My Action Items</span>
            </a>
        </li>
        
        <!-- User Directory -->
        <li>
            <a asp-page="/Users/Directory" class="flex items-center space-x-3">
                <i class="fas fa-address-book"></i>
                <span>User Directory</span>
            </a>
        </li>
        
        @if (User.IsInRole("Administrator") || User.IsInRole("Government Official"))
        {
            <!-- Reports -->
            <li>
                <details>
                    <summary class="flex items-center space-x-3">
                        <i class="fas fa-chart-bar"></i>
                        <span>Reports</span>
                    </summary>
                    <ul>
                        <li><a asp-page="/Reports/Attendance">Attendance</a></li>
                        <li><a asp-page="/Reports/RoomUtilization">Room Utilization</a></li>
                        <li><a asp-page="/Reports/Statistics">Statistics</a></li>
                    </ul>
                </details>
            </li>
        }
        
        @if (User.IsInRole("Administrator"))
        {
            <!-- Administration -->
            <li class="menu-title mt-4">
                <span>Administration</span>
            </li>
            <li>
                <a asp-page="/Admin/Users/Index" class="flex items-center space-x-3">
                    <i class="fas fa-users-cog"></i>
                    <span>User Management</span>
                </a>
            </li>
            <li>
                <a asp-page="/Admin/Rooms/Index" class="flex items-center space-x-3">
                    <i class="fas fa-cog"></i>
                    <span>Room Management</span>
                </a>
            </li>
            <li>
                <a asp-page="/Admin/AuditLogs" class="flex items-center space-x-3">
                    <i class="fas fa-history"></i>
                    <span>Audit Logs</span>
                </a>
            </li>
        }
    }
</ul>
