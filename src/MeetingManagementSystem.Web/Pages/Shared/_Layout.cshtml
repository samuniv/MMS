<!DOCTYPE html>
<html lang="en" data-theme="light">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Meeting Management System</title>
    
    <!-- Tailwind CSS and DaisyUI -->
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdn.jsdelivr.net/npm/daisyui@4.4.19/dist/full.min.css" rel="stylesheet" type="text/css" />
    
    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="drawer lg:drawer-open">
        <input id="drawer-toggle" type="checkbox" class="drawer-toggle" />
        
        <!-- Page content -->
        <div class="drawer-content flex flex-col">
            <!-- Navbar -->
            <div class="navbar bg-base-100 shadow-sm">
                <div class="flex-none lg:hidden">
                    <label for="drawer-toggle" class="btn btn-square btn-ghost">
                        <i class="fas fa-bars text-xl"></i>
                    </label>
                </div>
                <div class="flex-1">
                    <h1 class="text-xl font-semibold">@ViewData["Title"]</h1>
                </div>
                <div class="flex-none">
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <div class="dropdown dropdown-end">
                            <div tabindex="0" role="button" class="btn btn-ghost btn-circle avatar">
                                <div class="w-10 rounded-full bg-primary text-primary-content flex items-center justify-center">
                                    <span class="text-lg font-semibold">@User.Identity.Name?.Substring(0, 1).ToUpper()</span>
                                </div>
                            </div>
                            <ul tabindex="0" class="menu menu-sm dropdown-content mt-3 z-[1] p-2 shadow bg-base-100 rounded-box w-52">
                                <li class="menu-title">
                                    <span>@User.Identity.Name</span>
                                </li>
                                <li><a asp-page="/Account/Profile"><i class="fas fa-user"></i> Profile</a></li>
                                <li><a asp-page="/Account/NotificationSettings"><i class="fas fa-bell"></i> Notification Settings</a></li>
                                <li><a asp-page="/Account/Logout"><i class="fas fa-sign-out-alt"></i> Logout</a></li>
                            </ul>
                        </div>
                    }
                    else
                    {
                        <div class="flex gap-2">
                            <a asp-page="/Account/Login" class="btn btn-ghost btn-sm">Login</a>
                            <a asp-page="/Account/Register" class="btn btn-primary btn-sm">Register</a>
                        </div>
                    }
                </div>
            </div>
            
            <!-- Main content -->
            <main class="flex-1 p-6">
                <partial name="_AlertPartial" />
                @RenderBody()
            </main>
        </div>
        
        <!-- Sidebar -->
        <div class="drawer-side">
            <label for="drawer-toggle" aria-label="close sidebar" class="drawer-overlay"></label>
            <aside class="min-h-full w-64 bg-base-200">
                <div class="p-4 border-b border-base-300">
                    <a asp-page="/Index" class="block">
                        <h2 class="text-lg font-bold text-primary">Meeting Management</h2>
                        <p class="text-sm text-base-content/70">Government Office System</p>
                    </a>
                </div>
                
                <partial name="_NavigationPartial" />
            </aside>
        </div>
    </div>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>