@page
@model MeetingManagementSystem.Web.Pages.Documents.DeleteModel
@{
    ViewData["Title"] = "Delete Document";
}

<div class="container mx-auto px-4 py-8">
    <div class="max-w-2xl mx-auto">
        <h1 class="text-3xl font-bold mb-6">Delete Document</h1>

        <div class="alert alert-warning mb-6">
            <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
            </svg>
            <span>Are you sure you want to delete this document? This action cannot be undone.</span>
        </div>

        <div class="card bg-base-100 shadow-xl">
            <div class="card-body">
                <h2 class="card-title">Document Details</h2>
                <p><strong>File Name:</strong> @Model.FileName</p>

                <form method="post">
                    <div class="card-actions justify-end mt-6">
                        <a asp-page="/Meetings/Details" asp-route-id="@Model.MeetingId" class="btn btn-ghost">Cancel</a>
                        <button type="submit" class="btn btn-error">Delete Document</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
