@page
@model MeetingManagementSystem.Web.Pages.Documents.UploadModel
@{
    ViewData["Title"] = "Upload Document";
}

<div class="container mx-auto px-4 py-8">
    <div class="max-w-2xl mx-auto">
        <h1 class="text-3xl font-bold mb-6">Upload Document</h1>

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert alert-error mb-4">
                <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <span>@Model.ErrorMessage</span>
            </div>
        }

        <div class="card bg-base-100 shadow-xl">
            <div class="card-body">
                <form method="post" enctype="multipart/form-data">
                    <input type="hidden" asp-for="MeetingId" />

                    <div class="form-control w-full mb-4">
                        <label class="label">
                            <span class="label-text font-semibold">Select File</span>
                        </label>
                        <input type="file" asp-for="UploadedFile" class="file-input file-input-bordered w-full" required />
                        <label class="label">
                            <span class="label-text-alt">Allowed types: PDF, DOC, DOCX, XLS, XLSX (Max 10MB)</span>
                        </label>
                    </div>

                    <div class="card-actions justify-end mt-6">
                        <a asp-page="/Meetings/Details" asp-route-id="@Model.MeetingId" class="btn btn-ghost">Cancel</a>
                        <button type="submit" class="btn btn-primary">Upload Document</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
