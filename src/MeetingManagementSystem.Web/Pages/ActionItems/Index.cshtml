@page
@model MeetingManagementSystem.Web.Pages.ActionItems.IndexModel
@{
    ViewData["Title"] = "My Action Items";
}

<div class="container mx-auto px-4 py-8">
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-3xl font-bold">My Action Items</h1>
    </div>

    <partial name="_AlertPartial" />

    @if (Model.OverdueItems.Any())
    {
        <div class="alert alert-error mb-6">
            <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
            </svg>
            <span>You have @Model.OverdueItems.Count() overdue action item(s)</span>
        </div>
    }

    <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6">
        <div class="stats shadow">
            <div class="stat">
                <div class="stat-title">Pending</div>
                <div class="stat-value text-warning">@Model.PendingItems.Count()</div>
            </div>
        </div>
        <div class="stats shadow">
            <div class="stat">
                <div class="stat-title">In Progress</div>
                <div class="stat-value text-info">@Model.InProgressItems.Count()</div>
            </div>
        </div>
        <div class="stats shadow">
            <div class="stat">
                <div class="stat-title">Completed</div>
                <div class="stat-value text-success">@Model.CompletedItems.Count()</div>
            </div>
        </div>
    </div>

    @if (Model.OverdueItems.Any())
    {
        <div class="mb-8">
            <h2 class="text-2xl font-bold mb-4 text-error">Overdue Items</h2>
            <div class="space-y-4">
                @foreach (var item in Model.OverdueItems)
                {
                    <div class="card bg-base-100 shadow-xl border-l-4 border-error">
                        <div class="card-body">
                            <div class="flex justify-between items-start">
                                <div class="flex-1">
                                    <h3 class="card-title">@item.Description</h3>
                                    <p class="text-sm text-base-content/70 mt-2">
                                        <strong>Meeting:</strong> @item.AgendaItem.Meeting.Title
                                    </p>
                                    <p class="text-sm text-base-content/70">
                                        <strong>Agenda Item:</strong> @item.AgendaItem.Title
                                    </p>
                                    <div class="flex gap-2 mt-2">
                                        <span class="badge badge-error">Overdue</span>
                                        <span class="badge badge-outline">Due: @item.DueDate.ToString("MMM dd, yyyy")</span>
                                    </div>
                                </div>
                                <div class="flex gap-2">
                                    <a asp-page="/ActionItems/Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Edit</a>
                                    <form method="post" asp-page-handler="Complete" asp-route-id="@item.Id" class="inline">
                                        <button type="submit" class="btn btn-sm btn-success">Complete</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    }

    <div class="mb-8">
        <h2 class="text-2xl font-bold mb-4">Pending Items</h2>
        @if (Model.PendingItems.Any())
        {
            <div class="space-y-4">
                @foreach (var item in Model.PendingItems.Where(i => !Model.OverdueItems.Contains(i)))
                {
                    <div class="card bg-base-100 shadow-xl">
                        <div class="card-body">
                            <div class="flex justify-between items-start">
                                <div class="flex-1">
                                    <h3 class="card-title">@item.Description</h3>
                                    <p class="text-sm text-base-content/70 mt-2">
                                        <strong>Meeting:</strong> @item.AgendaItem.Meeting.Title
                                    </p>
                                    <p class="text-sm text-base-content/70">
                                        <strong>Agenda Item:</strong> @item.AgendaItem.Title
                                    </p>
                                    <div class="flex gap-2 mt-2">
                                        <span class="badge badge-warning">Pending</span>
                                        <span class="badge badge-outline">Due: @item.DueDate.ToString("MMM dd, yyyy")</span>
                                    </div>
                                </div>
                                <div class="flex gap-2">
                                    <a asp-page="/ActionItems/Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Edit</a>
                                    <form method="post" asp-page-handler="Complete" asp-route-id="@item.Id" class="inline">
                                        <button type="submit" class="btn btn-sm btn-success">Complete</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="text-center py-8 text-base-content/60">
                <i class="fas fa-tasks text-4xl mb-2"></i>
                <p>No pending action items</p>
            </div>
        }
    </div>

    <div class="mb-8">
        <h2 class="text-2xl font-bold mb-4">In Progress</h2>
        @if (Model.InProgressItems.Any())
        {
            <div class="space-y-4">
                @foreach (var item in Model.InProgressItems)
                {
                    <div class="card bg-base-100 shadow-xl">
                        <div class="card-body">
                            <div class="flex justify-between items-start">
                                <div class="flex-1">
                                    <h3 class="card-title">@item.Description</h3>
                                    <p class="text-sm text-base-content/70 mt-2">
                                        <strong>Meeting:</strong> @item.AgendaItem.Meeting.Title
                                    </p>
                                    <p class="text-sm text-base-content/70">
                                        <strong>Agenda Item:</strong> @item.AgendaItem.Title
                                    </p>
                                    <div class="flex gap-2 mt-2">
                                        <span class="badge badge-info">In Progress</span>
                                        <span class="badge badge-outline">Due: @item.DueDate.ToString("MMM dd, yyyy")</span>
                                    </div>
                                </div>
                                <div class="flex gap-2">
                                    <a asp-page="/ActionItems/Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Edit</a>
                                    <form method="post" asp-page-handler="Complete" asp-route-id="@item.Id" class="inline">
                                        <button type="submit" class="btn btn-sm btn-success">Complete</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="text-center py-8 text-base-content/60">
                <i class="fas fa-tasks text-4xl mb-2"></i>
                <p>No action items in progress</p>
            </div>
        }
    </div>

    <div class="collapse collapse-arrow bg-base-200">
        <input type="checkbox" /> 
        <div class="collapse-title text-xl font-medium">
            Completed Items (@Model.CompletedItems.Count())
        </div>
        <div class="collapse-content"> 
            @if (Model.CompletedItems.Any())
            {
                <div class="space-y-4">
                    @foreach (var item in Model.CompletedItems)
                    {
                        <div class="card bg-base-100 shadow">
                            <div class="card-body">
                                <div class="flex justify-between items-start">
                                    <div class="flex-1">
                                        <h3 class="card-title line-through text-base-content/50">@item.Description</h3>
                                        <p class="text-sm text-base-content/70 mt-2">
                                            <strong>Meeting:</strong> @item.AgendaItem.Meeting.Title
                                        </p>
                                        <div class="flex gap-2 mt-2">
                                            <span class="badge badge-success">Completed</span>
                                            <span class="badge badge-outline">Completed: @item.CompletedAt?.ToString("MMM dd, yyyy")</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="text-center py-8 text-base-content/60">
                    <i class="fas fa-tasks text-4xl mb-2"></i>
                    <p>No completed action items</p>
                </div>
            }
        </div>
    </div>
</div>
